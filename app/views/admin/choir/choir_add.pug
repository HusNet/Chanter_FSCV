extends choir

block add_choir

    form.col.s12(id='myForm' method='POST' action='/admin/choir')



        .row
            .input-field.col.s6
                label(for='choeur_name') #{translation.CHOIR_NAME}
                input#choeur_name.form-control(type='text' name='choeur_name' required)
            .input-field.col.s6
                label(for='effectif') #{translation.EFFECTIVE}
                input#effectif.form-control(type='text' name='effectif')

        .row
            .input-field.col.s2
                label(for='NPA') #{translation.POSTE_CODE}
                input#NPA.form-control(type='text' name='npa' required)
            .input-field.col.s4
                label(for='lieu') #{translation.LOCATION}
                input#lieu.form-control(type='text' name='lieu' required)

            .input-field.col.s4
                label(for='foundationDate') #{translation.DATE_FOUNDATION}
                input#foundationDate.datepicker(type='date' name='foundationDate',placeholder='')


        .row
            .input-field.col.s8
                label(for='homepage') #{translation.HOMEPAGES}
                input#homepage.form-control(type='text' name='homepage')

            p.col.s2
                label
                    input(name='fr', type='checkbox')
                    span #{translation.FRENCH}
            p.col.s2
                label
                    input(name='de', type='checkbox')
                    span #{translation.GERMAN}

        .row
            p.col.s3 #{translation.SWISS_CHOIR_UNION}:
            p.col.s2
                label
                    input(type='checkbox', name='USC')
                    span #{translation.MEMBER_USC}
            p.col.s3
                label
                    input(type='checkbox', name='noUSC')
                    span #{translation.NOT_USC}
            .input-field.col.s4
                input#dateUSC.datepicker(type='date', placeholder='', name='dateUSC')
                label(for='dateUSC') #{translation.DATE_USC}

        .row
            p.col.s3 #{translation.CANTONAL_FEDERATION}:
            p.col.s2
                label
                    input(type='checkbox', name='fscv')
                    span #{translation.MEMBER_FSCV}
            p.col.s3
                label
                    input(type='checkbox', name='noFSCV')
                    span #{translation.NOT_FSCV}
            .input-field.col.s4
                label(for='dateFSCV') #{translation.DATE_FSCV}
                input#dateFSCV.datepicker(type='date' name='dateFSCV', placeholder='')

        .row
            p.col.s3 #{translation.MAIL_ADDRESSING}:
            p.col.s2
                label
                    input(name='president', type='checkbox')
                    span #{translation.PRESIDENT}
            p.col.s2
                label
                    input(name='director', type='checkbox')
                    span #{translation.DIRECTOR}

        .row
            select.browser-default.col.s4
                option(value='', disabled='', selected='', name='grpmts') #{translation.GRPMTS_REGION}
                option(value='1') #{translation.GROUP_GSCBV}
                option(value='2') #{translation.GROUP_UCC}
                option(value='3') #{translation.GROUP_GCVC}
                option(value='4') #{translation.GROUP_OCV}

            .input-field.col.s3
                input#dateGrpmts.datepicker(type='date', placeholder='', name='dateGrpmts')
                label(for='dateGrpmts') #{translation.DATE_GRPMTS}
        .row
            select.browser-default.col.s4
                option(value='', disabled='', selected='', name='decanat') #{translation.DECANAT}
                option(value='1') #{translation.WELTICH}
                option(value='2') #{translation.LEUK}
                option(value='3') #{translation.RARON}
                option(value='4') #{translation.BRIG}
                option(value='5') #{translation.VISP}
                option(value='6') #{translation.ERNEN}
            select.browser-default.col.s4
                option(value='', disabled='', selected='', name='typeChoeur') #{translation.TYPE_CHOIR}
                option(value='1') #{translation.ADULT}
                option(value='2') #{translation.TEEN}
                option(value='3') #{translation.KID}
                option(value='4') #{translation.MIXT}
                option(value='5') #{translation.WOMEN}
                option(value='6') #{translation.MEN}

            p.col.s2
                label
                    input(name='church_leader', type='checkbox')
                    span #{translation.CHURCH_LEADER}
            p.col.s2
                label
                    input(name='gospel_leader', type='checkbox')
                    span #{translation.GOSPEL_LEADER}

        .row
            .input-field.col.s4 #{translation.NAME_PRESIDENT}
            select.browser-default.col.s4
                option(value='',disabled='', selected='', name='presidentName') #{translation.PRESIDENT} #{translation.ALREADY_EXISTING}
                each person in PersonPresident
                    option(value= person.Id)= person.Firstname + " " + person.Lastname


        .row
            .input-field.col.s4
                p #{translation.NAME_DIRECTOR}
            select.browser-default.col.s4
                option(value='', disabled='', selected='', name='directorName') #{translation.DIRECTOR} #{translation.ALREADY_EXISTING}
                each person in PersonDirector
                    option(value= person.Id)= person.Firstname + " " + person.Lastname

        .row
            .input-field.col.s4
                p #{translation.NAME_CASHIER}
            select.browser-default.col.s4
                option(value='', disabled='', selected='', name='cashier') #{translation.CASHIER} #{translation.ALREADY_EXISTING}
                each person in PersonCaissier
                    option(value= person.Id)= person.Firstname + " " + person.Lastname


        .row
            .input-field.col.s4
                p #{translation.NAME_SECRETARIAT}
            select.browser-default.col.s4
                option(value='', disabled='', selected='', name='secretary') #{translation.SECRETARY} #{translation.ALREADY_EXISTING}
                each person in PersonSecretaire
                    option(value= person.Id)= person.Firstname + " " + person.Lastname


        .row
            .input-field.col.s12
                label.active(for='comments') #{translation.COMMENTS}
                textarea#comments.materialize-textarea(name='comment')

        .row
            button.btn.btn-primary.col.s3(type='submit') #{translation.ADD}
            button.btn.btn-primary.col.s3(type='submit',onclick="myFunction()") #{translation.CLEAR}




        script.
            function myFunction() {
                document.getElementById("myForm").reset();
            }




