extends ../layouts/_adminLayout

block content
    script(src='//cdn.quilljs.com/1.3.6/quill.min.js')
    link(href='//cdn.quilljs.com/1.3.6/quill.snow.css', rel='stylesheet')

    h1 #{translation.TITLE_ADMIN_NEWS}

    br



    br

    form.col.s12(method='POST' action='/admin/news')
        .input-field.col.s6
            input#title.validate(type='text' name="title")
            label(for='title') #{translation.TITLE}

        #editor

        p
            label
                input(name='lang' type='radio' value='fr')
                span Fr
        p
            label
                input(name='lang' type='radio' value='de')
                span De

        #editor_translate

        p
            button.btn.waves-effect.waves-light(type='submit' name='action' onclick='getText()')
                | #{translation.ADD}
                i.material-icons.right send

    script.
        var quill = new Quill('#editor', {
            theme: 'snow'
        });


    script.
        var quill = new Quill('#editor_translate', {
            theme: 'snow'
        });

    script(src='//cdn.quilljs.com/1.3.6/quill.core.js')