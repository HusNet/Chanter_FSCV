extends menu

block edit_menu

    script.
        document.getElementById('a_menu_add').classList.remove('active');
        document.getElementById('a_menu_edit').classList.add('active');
        document.getElementById('a_menu_delete').classList.remove('active');

        document.addEventListener('DOMContentLoaded', function () {
            var elems = document.querySelectorAll('.dropdown-trigger');
            var instances = M.Dropdown.init(elems, {hover: true});
        });
    br
    br
    br
    br

    a.dropdown-trigger.btn(href="#", data-target='dropdown_menu_list') #{translation.SELECT_MENU}

    ul#dropdown_menu_list.dropdown-content
        each menu in menus
            li
                a(href='/admin/menu/edit?id=' + menu.idMenu)
                    if (lang === 'fr')
                        | #{menu.Name_fr}
                    if (lang === 'de')
                        | #{menu.Name_de}


