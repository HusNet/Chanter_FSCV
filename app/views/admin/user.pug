extends ../layouts/_adminLayout

block content
    h1 #{translation.TITLE_ADMIN_USER}

        .row
            form.col.s12(method='POST' action='/user')
                .row
                    .input-field.col.s6
                        input#username.validate(type='text')
                        label(for='username') #{translation.USERNAME}
                    .input-field.col.s6
                        input#password.validate(type='password')
                        label(for='password') #{translation.PASSWORD}
                    button.btn.waves-effect.waves-light(type='submit', name='action')
                        | #{translation.ADD}
                        i.material-icons.right send





