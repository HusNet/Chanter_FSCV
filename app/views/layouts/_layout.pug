doctype html
html(lang='fr')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width')
        link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')

        title= title
        block css
            link(href='/public/assets/css/materialize.min.css', rel='stylesheet')
            link(href='/public/css/chanter.css', rel='stylesheet')

    body
        nav

            div(class='nav-wrapper teal lighten-2')
                ul(id='nav-mobile', class='left')
                    // mainMenu
                    each item in mainMenu
                        if (item.IsMenu)
                            li.dropdown-trigger(data-target='dropdown_submenu') #{item.Name}
                                ul#dropdown_submenu.dropdown-content
                                    each sub in item.content
                                        li
                                            a(href="/?id=" + sub.idChild) #{sub.Name}
                        else
                            li
                                a(href="/?id=" + item.idChild) #{item.Name}
                    li
                        a(href="/admin") #{translation.LOGIN}
                    li
                        a(href='?clang=fr') fr
                    li
                        a(href='?clang=de') de

                a(href='/', class='right brand-logo', style='margin-right:15px') Chanter.ch

        div(class='container')
            block content


        block js
            script(src='/public/assets/js/materialize.min.js')

            script.
                document.addEventListener('DOMContentLoaded', function () {
                    var element = document.querySelectorAll('.dropdown-trigger');
                    var instances = M.Dropdown.init(element, {hover: true, constrainWidth: false, coverTrigger: false});
                });
